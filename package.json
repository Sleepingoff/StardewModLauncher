{
  "name": "stardew-mod-launcher",
  "author": {
    "name": "slO",
    "email": "justjh30@gmail.com"
  },
  "displayName": "StardewModLauncher",
  "description": "stardew valley mod launcher",
  "private": true,
  "version": "0.1.4",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "electron-builder",
    "publish": "electron-builder --mac --win --x64 -p always"
  },
  "devDependencies": {
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "fs-extra": "^11.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "SleepingOff",
        "repo": "StardewModLauncher"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "public/**/*"
    ],
    "mac": {
      "icon": "public/Stardrop.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/Stardrop.ico"
    },
    "linux": {
      "icon": "public/Stardrop.png"
    }
  },
  "dependencies": {
    "json5": "^2.2.3"
  }
}
